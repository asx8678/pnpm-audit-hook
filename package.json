{
  "name": "pnpm-audit-hook",
  "version": "1.0.0",
  "description": "Minimal pnpm hook that blocks compromised or vulnerable package installs before download.",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    ".pnpmfile.cjs",
    ".pnpm-audit.yaml",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npm run build && node --test dist/test/*.test.js",
    "test:ts": "node --test test/*.test.ts",
    "prepare": "npm run build"
  },
  "dependencies": {
    "semver": "^7.6.3",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/semver": "^7.5.8",
    "typescript": "^5.9.3"
  }
}
