{
  "name": "pnpm-audit-hook",
  "version": "1.0.0",
  "description": "pnpm hook that blocks vulnerable packages before download. Uses GitHub Advisory Database with offline static DB fallback.",
  "license": "MIT",
  "author": "asx8678",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asx8678/pnpm-audit-hook.git"
  },
  "homepage": "https://github.com/asx8678/pnpm-audit-hook#readme",
  "bugs": {
    "url": "https://github.com/asx8678/pnpm-audit-hook/issues"
  },
  "keywords": [
    "pnpm",
    "security",
    "audit",
    "vulnerability",
    "hook",
    "pnpmfile",
    "npm",
    "dependencies",
    "supply-chain",
    "ghsa",
    "cve"
  ],
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pnpm-audit-setup": "bin/setup.js"
  },
  "files": [
    "dist",
    "bin",
    ".pnpmfile.cjs",
    ".pnpm-audit.yaml",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/copy-static-db.js && node scripts/bundle.js",
    "test": "node --import tsx --test 'test/**/*.test.ts'",
    "prepare": "npm run build",
    "update-vuln-db": "tsx scripts/update-vuln-db.ts --since=2021-01-01",
    "update-vuln-db:incremental": "tsx scripts/update-vuln-db.ts --incremental",
    "update-vuln-db:full": "tsx scripts/update-vuln-db.ts"
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "@types/semver": "^7.7.1",
    "esbuild": "^0.27.2",
    "semver": "^7.7.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "yaml": "^2.8.2"
  }
}
